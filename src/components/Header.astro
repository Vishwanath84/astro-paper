---
import { SITE } from "@/config";
---

<header>
  <div class="relative flex w-full flex-row items-center justify-center py-8">
    <!-- Profile Image -->
    <img
      src="/images/profile.jpg"
      alt="Profile"
      class="mr-6 h-16 w-16 rounded-full border-2 border-accent object-cover"
      style="background: #fff;"
    />

    <!-- Site Title -->
    <a
      href="/"
      class="mr-8 font-mono text-2xl font-bold tracking-tight whitespace-nowrap"
      style="letter-spacing: 0.5px;"
    >
      {SITE.title}
    </a>

    <!-- Navbar Links -->
    <nav class="flex flex-row items-center gap-6 text-base font-semibold">
      <a href="/posts/" class="transition hover:text-accent">Posts</a>
      <a href="/tags/" class="transition hover:text-accent">Tags</a>
      <a href="/about/" class="transition hover:text-accent">About</a>
    </nav>
  </div>
</header>
