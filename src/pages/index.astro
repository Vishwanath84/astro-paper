---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
---

<Layout>
  <Header />
  <main
    id="main-content"
    class="flex min-h-[80vh] flex-col items-center justify-center px-4"
  >
    <!-- Profile Image -->
    <img
      src="/images/profile.jpg"
      alt="Profile"
      class="mt-12 mb-6 h-40 w-40 rounded-full border-4 border-accent object-cover"
      style="background: #fff;"
    />

    <!-- Name and Title -->
    <h1
      class="mt-4 mb-2 text-center text-4xl leading-tight font-extrabold sm:text-5xl"
    >
      Shreya Khanduri <span class="block sm:inline">| Rare Decay Physics</span>
    </h1>

    <!-- Description -->
    <div class="mt-4 mb-6 max-w-xl text-center text-lg">
      <p>
        PhD candidate at IIT Ropar working on rare nuclear decays. <br />
        My research focuses on improving experimental sensitivity through detector
        development and background suppression to probe physics beyond the Standard
        Model.
      </p>
    </div>

    <!-- Links -->
    <div class="mt-2 mb-8 flex flex-col items-center space-y-2">
      <a
        href="mailto:shreyakhanduri187@gmail.com"
        class="font-medium text-accent hover:underline"
      >
        Email: shreyakhanduri187@gmail.com
      </a>
      <a
        href="https://www.linkedin.com/in/shreya-khanduri-a85aa3318/"
        target="_blank"
        class="font-medium text-accent hover:underline"
      >
        LinkedIn
      </a>
      <a
        href="/docs/cv.pdf"
        target="_blank"
        class="mt-2 font-bold text-accent hover:underline"
      >
        Download CV
      </a>
    </div>
  </main>
  <Footer />
</Layout>
